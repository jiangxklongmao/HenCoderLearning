<?xml version="1.0" encoding="utf-8"?>
<com.jiangxk.hencoderlearningview.View.drag.DragToCollectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="50dp"
        android:contentDescription="Lengtu"
        android:src="@drawable/lengtu" />


    <ImageView
        android:id="@+id/logoView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/avatarView"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="Google"
        android:src="@drawable/google_logo" />

    <LinearLayout
        android:id="@+id/collectorLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#78909C"
        android:orientation="horizontal" />


</com.jiangxk.hencoderlearningview.View.drag.DragToCollectLayout>